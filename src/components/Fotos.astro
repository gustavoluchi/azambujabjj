---
import Foto1 from "@/assets/foto.jpg";
import Foto2 from "@/assets/foto2.jpg";
import Foto3 from "@/assets/foto3.jpg";
import { Picture } from "astro:assets";

const carrosel = [Foto1, Foto2, Foto3];
---

<div class="carousel">
  {
    carrosel.map((foto, index) => (
      <div id={"foto" + index} class="carousel-item relative w-full">
        <Picture
          src={foto}
          loading={index === 0 ? "eager" : "lazy"}
          alt="Foto de alunos treinando Jiu-Jitsu na Escola de Jiu-Jitsu Azambuja-Behring."
          class="w-full bg-cover"
          loading="lazy"
          layout="constrained"
        />
        <div class="absolute top-1/2 right-5 left-5 flex -translate-y-1/2 transform justify-between">
          <a
            href={
              index === 0
                ? "#foto" + (carrosel.length - 1)
                : "#foto" + (index - 1)
            }
            class="btn btn-circle"
          >
            ❮
          </a>
          <a
            href={
              index === carrosel.length - 1 ? "#foto0" : "#foto" + (index + 1)
            }
            class="btn btn-circle"
          >
            ❯
          </a>
        </div>
      </div>
    ))
  }
</div>
